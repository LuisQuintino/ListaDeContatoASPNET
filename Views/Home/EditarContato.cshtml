@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1>Editar Contato</h1> 
</div>
 <form asp-controller="Home" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="id" />
<div class="form-group">
      <label for="nome">Nome</label>
     <input type="text" asp-for="Nome" class="form-control" placeholder="Nome" >
  </div>
  <div class="form-group">
      <label for="sobrenome">Sobrenome</label>
     <input type="text" asp-for="sobrenome" class="form-control" placeholder="Sobrenome">
  </div>
  <div class="form-group">
      
      <label for="exampleInputEmail1">Email address</label>
    <input type="email" asp-for="email" class="form-control"  placeholder="Enter email">
  </div>
    <div class="form-group">
      
      <label for="telefone">Telefone</label>
    <input type="text" asp-for="telefone" class="form-control" placeholder="Digite o celular">
  </div>
  <div class="form-group">
    <label for="observacao">Observação</label>
    <textarea asp-for="observacao" class="form-control" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Editar</button>
  <a class="btn btn-secondary" role="button" asp-controller="Home" asp-action="Index">Voltar</a>
</form>
